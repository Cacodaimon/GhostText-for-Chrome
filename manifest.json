{
  "name": "GhostText",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png"
  },
  "version": "0.1",
  "manifest_version": 2,
  "description": "Connects a textarea to SublimeText.",
  "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["vendor/jquery.min.js", "vendor/humane-ghosttext.min.js", "scripts/lib.js", "scripts/content.js"],
        "css": ["vendor/humane-ghosttext.css"],
        "run_at": "document_end"
  }],
  "background": {
    "scripts": [
      "vendor/jquery.min.js",
      "scripts/lib.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs","<all_urls>"
    ],
  "options_page": "options.html",
  "browser_action": {
    "default_title": "GhostText",
    "default_icon":  "icon/32.png"
  }
}