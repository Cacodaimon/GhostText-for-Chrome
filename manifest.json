{
    "manifest_version": 2,
    "name": "GhostText",
    "description": "Connects a textarea to a GhostText-enabled text editor (like Sublime Text).",
    "version": "1.0",
    "author": "Guido Kr√∂mer, Federico Brigante",
    "icons": {
        "16": "images/logo_19.png",
        "19": "images/logo_19.png",
        "48": "images/logo_48.png",
        "128": "images/logo_128.png"
    },
    "permissions": [
        "activeTab", "http://localhost/"
    ],
    "options_page": "options.html",
    "browser_action": {
        "default_title": "GhostText",
        "default_icon":  "images/logo_19.png"
    },
    "background": {
        "scripts": [
            "vendor/jquery.min.js",
            "scripts/lib.js",
            "scripts/background.js"
        ]
    }
}